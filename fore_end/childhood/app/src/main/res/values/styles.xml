<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <!-- 开始界面的Theme -->
    <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/welcom</item>
    </style>
    <!-- 淡入淡出动画 -->
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!--界面横线-->
    <style name="PersonalLine">
        <item name="android:background">#e5e5e5</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 满屏横线 -->
    <style name="fullWidthLine">
        <item name="android:background">#e5e5e5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--短竖线-->
    <style name="VerticalLine_Short">
        <item name="android:background">#e5e5e5</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--家长界面竖线-->
    <style name="VLine">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--家长界面横线-->
    <style name="HLine">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--dialog_分割线-->
    <style name="dialogLine">
        <item name="android:background">#bfbfbf</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--my界面LinearLayout中RelativeLayout的style-->
    <style name="my_r_layout">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/my_bar_color</item>
    </style>
    <!--my界面LinearLayout中左边图片的style-->
    <style name="my_r_image_left">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--my界面LinearLayout中左边文本的style-->
    <style name="my_l_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!--寻找小伙伴右边字体style-->
    <style name="findPartner_Rtext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#989898</item>
    </style>
    <!--寻找小伙伴左边字体style-->
    <style name="findPartner_Ltext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!--家长提交游戏界面文字style-->
    <style name="parent_submit_game_time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!--得到小伙伴字体，parentDialog和childDialog界面的style-->
    <style name="getPartner_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#989898</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--my_content界面、登录界面LinearLayout中左边文本的style-->
    <style name="my_content_l_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!--my_content界面\注册界面LinearLayout中右边文本的style-->
    <style name="my_content_r_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">#898989</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!--my界面LinearLayout(my_content\head_pc中右边图像)中右边图片的style-->
    <style name="my_r_image_right">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--my界面标题栏的style-->
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <!--我的信息 第一栏图片文字的style-->
    <style name="title_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--My 第一栏图片文字的style-->
    <style name="my_title_image">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">60px</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <!--dialog_model-->
    <style name="sdw_white">
        <item name="android:shadowColor">#7fffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <!--chat_room_item-->
    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="dialog_model_text">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="dialog_model_buttonOk">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="dialog_model_buttonCancel">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>
    <!--弹框样式-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--back image-->
    <style name="title_back">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:onClick">onBack</item>
    </style>
    <!--标题图片-->
    <style name="title_bar_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!--game网络加载图标-->
    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/load_anim_small</item>
        <item name="android:layout_width">160px</item>
        <item name="android:layout_height">160px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--注册界面edit样式-->
    <style name="registerEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/login_yuanjiao</item>
    </style>
    <!--注册界面text样式-->
    <style name="registerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--界面横线-->
    <style name="registerLine">
        <item name="android:background">#bfbfbf</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--MainRank/mainbaidu-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">#f7f7f7</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--成就界面，按钮样式-->
    <style name="achi_tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!-- 自定义进度条 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">90dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>
    <!--ratingBar-->
    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>
