<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/some_webView_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                style="@style/title_back"
                android:src="@drawable/pre" />

            <TextView style="@style/title_text"
                android:text="社区"/>

            <ImageView
                android:id="@+id/some_webView_refresh"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:padding="12dp"
                android:src="@drawable/refresh" />
        </RelativeLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/some_webView_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/some_webView_linearlayout"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>