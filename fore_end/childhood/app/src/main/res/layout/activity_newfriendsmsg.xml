<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_myr1"
        style="@style/title">

        <ImageView
            android:id="@+id/my_image1"
            style="@style/title_back"
            android:src="@drawable/pre" />

        <TextView
            style="@style/title_text"
            android:text="新的朋友" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_new_friwndsmsg_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/search"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ar5" />

        <TextView
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/search"
            android:hint="手机号/童年号"
            android:focusable="false"
            android:textColor="#484c4c"
            android:textSize="16sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="bottom"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:text="新的朋友"
        android:background="#ebebeb"
        android:textSize="12sp" />
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:divider="#DADADA"
        android:dividerHeight="0.1dp" />

</LinearLayout>