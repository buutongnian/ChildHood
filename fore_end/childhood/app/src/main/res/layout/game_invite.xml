<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_yuanjiao"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/dialog_game_image" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_bar_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="游戏名称:  " />

                <TextView
                    android:id="@+id/game_invite_gameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/game_invite_gameName"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="发起人:  " />

                <TextView
                    android:id="@+id/game_invite_createdName"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp">

                <TextView

                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="游戏地点:  " />

                <TextView
                    android:id="@+id/game_invite_play_place"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="推荐人数:  " />

                <TextView
                    android:id="@+id/game_invite_referrals"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@color/my_background" />

        </LinearLayout>

        <View style="@style/dialogLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp">

            <TextView
                style="@style/dialog_model_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="游戏简介：" />

            <TextView
                android:id="@+id/game_invite_gamepsy"
                style="@style/dialog_model_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="2"
                android:layout_gravity="center_vertical"
                android:text="*****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/game_invite_positiveButton"
                style="@style/dialog_model_buttonOk"
                android:layout_width="90dp"
                android:layout_height="40.0dip"
                android:background="@color/my_bar_color"
                android:gravity="center"
                android:text="加入" />

            <Button
                android:id="@+id/game_invite_negativeButton"
                style="@style/dialog_model_buttonCancel"
                android:layout_width="90dp"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:background="@color/my_bar_color"
                android:gravity="center"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>