<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_list_item_bg"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/re_avatar"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/single_iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/default_useravatar" />
    </RelativeLayout>

    <TextView
        android:id="@+id/single_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/re_avatar"
        android:text="童年"
        android:textColor="#353535"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:text="昨天"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/re_avatar"
        android:orientation="horizontal"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/msg_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/msg_state_fail_resend"
            android:visibility="gone" />

        <TextView
            android:id="@+id/single_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="童年：一个梦，从童年做到老。"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/single_tv_unread"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@id/re_avatar"
        android:layout_alignTop="@id/re_avatar"
        android:layout_marginRight="7dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/unread_count_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="#dadada" />


</RelativeLayout>