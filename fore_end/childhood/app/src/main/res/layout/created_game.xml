<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="253dp"
    android:layout_height="470dp"
    android:background="@drawable/dialog_yuanjiao"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/created_game_gameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dialog_game_image" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_bar_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="游戏名称:  " />

                <TextView
                    android:id="@+id/gameName"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="发起人:  " />

                <TextView
                    android:id="@+id/createdName"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp">

                <TextView

                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="游戏地点:  " />

                <TextView
                    android:id="@+id/play_place"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <RelativeLayout
                android:id="@+id/created_game_members"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/team_name_members"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="队伍成员:  " />

                <TextView
                    android:id="@+id/playJoiner"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/team_name_members"
                    android:text="*****" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/onkey_members_more" />

            </RelativeLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="当前人数:  " />

                <TextView
                    android:id="@+id/playCount"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="推荐人数:  " />

                <TextView
                    android:id="@+id/referrals"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*****" />
            </LinearLayout>

            <View style="@style/dialogLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp">

                <TextView
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏简介:  " />

                <TextView
                    android:id="@+id/gameContent"
                    style="@style/dialog_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*****" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/positiveButton"
            style="@style/dialog_model_buttonOk"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:gravity="center"
            android:text="加入" />

        <Button
            android:id="@+id/negativeButton"
            style="@style/dialog_model_buttonCancel"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>
