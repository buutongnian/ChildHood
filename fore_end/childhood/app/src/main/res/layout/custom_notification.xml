<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/notification_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/notification_largeimage"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/touxiang" />

            <ImageView
                android:id="@+id/notification_smallimage"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_marginLeft="45.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="45.0dip"
                android:background="@drawable/logo" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/notification_imageview"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知标题"
                android:textColor="@android:color/black"
                android:textSize="18.0dip" />

            <TextView
                android:id="@+id/notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知内容"
                android:textColor="@android:color/darker_gray"
                android:textSize="16.0dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="12dip"
            android:text="通知时间"
            android:textSize="16.0dip" />
    </RelativeLayout>

</RelativeLayout>