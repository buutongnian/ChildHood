<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rank_user"
        android:layout_width="wrap_content"
        android:layout_height="61dp">

        <TextView
            android:id="@+id/ranking_list_model_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#ff666666"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ranking_list_model_imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/ranking_list_model_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ranking_list_model_imageView1"

            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/ranking_list_model_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ranking_list_model_imageView"
            android:gravity="center"
            android:text="名称"
            android:textColor="#000000"
            android:textSize="38px" />

        <TextView
            android:id="@+id/ranking_list_model_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/like"
            android:gravity="right"
            android:text="排序值"
            android:textColor="#000000"
            android:textSize="38px" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rank_zan" />
    </RelativeLayout>
</LinearLayout>