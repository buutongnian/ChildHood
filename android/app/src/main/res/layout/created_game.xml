<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_yuanjiao"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/dialog_game_image"/>

       <LinearLayout
           android:id="@+id/content"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/my_bar_color">
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="游戏名称:  "/>
               <TextView
                   android:id="@+id/gameName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
           <View style="@style/dialogLine" />
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="发起人:  "/>
               <TextView
                   android:id="@+id/createdName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
           <View style="@style/dialogLine" />
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="游戏地点:  "/>
               <TextView
                   android:id="@+id/play_place"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
           <View style="@style/dialogLine" />
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="开始时间:  "/>
               <TextView
                   android:id="@+id/playTime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
           <View style="@style/dialogLine" />
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/dialog_model_text"
                   android:layout_gravity="center_vertical"
                   android:text="队伍成员:  "/>
               <TextView
                   android:id="@+id/playJoiner"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
           <View style="@style/dialogLine" />
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="当前人数:  "/>
               <TextView
                   android:id="@+id/playCount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
           <View style="@style/dialogLine" />
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="推荐人数:  "/>
               <TextView
                   android:id="@+id/referrals"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>

           <View
               android:layout_width="wrap_content"
               android:layout_height="18dp"
               android:background="@color/my_background"/>
           <LinearLayout
               android:layout_marginLeft="40dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   style="@style/dialog_model_text"
                   android:text="游戏简介:  "/>
               <TextView
                   android:id="@+id/gameContent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/dialog_model_text"
                   android:text="*****"/>
           </LinearLayout>
       </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/positiveButton"
                style="@style/dialog_model_buttonOk"
                android:layout_width="90dp"
                android:layout_height="40.0dip"
                android:background="@color/my_bar_color"
                android:gravity="center"
                android:text="加入" />

            <Button
                android:id="@+id/negativeButton"
                style="@style/dialog_model_buttonCancel"
                android:layout_width="90dp"
                android:layout_height="40.0dip"
                android:background="@color/my_bar_color"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>