<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/rank_background">
    <RelativeLayout
        android:id="@+id/ranking_gamelist__r1"
        style="@style/title">
        <TextView
            style="@style/title_text"
            android:text="排行榜" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/ranking_gamelist__r1"
        android:id="@+id/ranking_gamelist_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ranking_gamelist_imageView1"
            android:src="@drawable/game_icon"
            android:layout_margin="20dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ranking_gamelist_imageView2"
            android:src="@drawable/game_icon"
            android:layout_margin="20dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ranking_gamelist_imageView3"
            android:src="@drawable/game_icon"
            android:layout_margin="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/ranking_gamelist_textview"
        android:layout_below="@+id/ranking_gamelist_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排行榜TOP100"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ranking_gamelist_textview"
        android:padding="20dp">
    <ListView
        android:id="@+id/ranking_gamelist_listview"
        android:background="@color/my_bar_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </ListView>
</FrameLayout>
</RelativeLayout>