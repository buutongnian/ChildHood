<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rank_background">

    <RelativeLayout
        android:id="@+id/ranking_gamelist__r1"
        style="@style/title">

        <TextView
            style="@style/title_text"
            android:text="排行榜" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ranking_gamelist_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_gamelist__r1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ranking_98dpgamelist_imageView1"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/game_icon" />

        <ImageView
            android:id="@+id/ranking_gamelist_imageView2"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/game_icon" />

        <ImageView
            android:id="@+id/ranking_gamelist_imageView3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/game_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ranking_gamelist_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_gamelist_linearlayout"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >

        <TextView
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/grade"
            android:gravity="center"
            android:paddingBottom="2.0dip"
            android:paddingLeft="70.0dip"
            android:paddingRight="70.0dip"
            android:paddingTop="2.0dip"
            android:text="排行榜TOP10"
            android:textColor="#000000"
            android:textSize="51px"
            android:textStyle="bold"

            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ranking_gamelist_textview"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ListView
            android:id="@+id/ranking_gamelist_listview"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rank_yuanjiao">

        </ListView>
    </FrameLayout>
</RelativeLayout>