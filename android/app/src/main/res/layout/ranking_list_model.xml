<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ranking_list_model_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1223"
        android:textColor="#000000"/>
    <ImageView
        android:id="@+id/ranking_list_model_imageView"
        android:layout_toRightOf="@+id/ranking_list_model_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/touxiang"
       />
    <TextView
        android:id="@+id/ranking_list_model_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ranking_list_model_imageView"
        android:text="1223"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/ranking_list_model_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ranking_list_model_textview2"
        android:layout_marginLeft="120dp"
        android:text="1223"
        android:textColor="#000000"/>
</RelativeLayout>
</RelativeLayout>