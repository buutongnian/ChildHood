<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="45.0dip"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_yuanjiao"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/dialog_game_image"/>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/my_bar_color">
            <LinearLayout
                android:id="@+id/map_dialog_game"
                android:onClick="onClickGame"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="游戏名称:  "/>
                <TextView
                    android:id="@+id/map_dialog_game_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="*****"/>
            </LinearLayout>
            <View style="@style/dialogLine" />
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="创建人:  "/>
                <TextView
                    android:id="@+id/map_dialog_creater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="*****"/>
            </LinearLayout>
            <View style="@style/dialogLine" />
            <LinearLayout
                android:id="@+id/map_dialog_playsite"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="玩耍地点:  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="*****"/>
            </LinearLayout>
            <View style="@style/dialogLine" />
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="开始时间:  "/>
                <TextView
                    android:id="@+id/map_dialog_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="*****"/>
            </LinearLayout>
            <View style="@style/dialogLine" />
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/dialog_model_text"
                    android:layout_gravity="center_vertical"
                    android:text="参与人数:  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="*****"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@color/my_background"/>
            <LinearLayout
                android:id="@+id/map_dialog_defingame"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="自定义游戏:  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/dialog_model_text"
                    android:text="*****"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/map_dialog_positiveButton"
                style="@style/dialog_model_buttonOk"
                android:layout_width="90dp"
                android:layout_height="40.0dip"
                android:background="@color/my_bar_color"
                android:gravity="center"
                android:text="加入" />

            <Button
                android:id="@+id/map_dialog_negativeButton"
                style="@style/dialog_model_buttonCancel"
                android:layout_width="90dp"
                android:layout_height="40.0dip"
                android:background="@color/my_bar_color"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>