<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ranking_list_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ranking_list_imageView1"
        android:src="@drawable/text_gamelistview"
        android:layout_margin="20dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ranking_list_imageView2"
        android:src="@drawable/text_gamelistview"
        android:layout_margin="20dp"
        android:layout_weight="1"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ranking_list_imageView3"
        android:src="@drawable/text_gamelistview"
        android:layout_margin="20dp"
        android:layout_weight="1"
         />
   </LinearLayout>
    <TextView
        android:id="@+id/ranking_list_textview"
        android:layout_below="@+id/ranking_list_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fijfdjfkdjfkkf"
        android:layout_centerInParent="true"
        />
    <ListView
        android:id="@+id/ranking_list_listview"
        android:layout_below="@+id/ranking_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>