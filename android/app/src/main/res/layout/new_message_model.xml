<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/my_bar_color">
    <ImageView
        android:id="@+id/new_message_model_im"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="14dp"
        android:layout_centerVertical="true"
        android:src="@drawable/touxiang"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/new_message_model_ll"
        android:layout_toRightOf="@+id/new_message_model_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/new_message_model_model_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="3dp"
            android:text="123"
            android:textSize="36px"
            />
        <TextView
            android:id="@+id/new_message_model_model_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#959595"
            android:text="456"
            android:textSize="30px"/>
    </LinearLayout>
    <Button
        android:id="@+id/new_message_model_model_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:background="@drawable/newmessage_yuanjiao"
        android:text="添加"/>
    <TextView
        android:id="@+id/new_message_model_model_textview"
        android:layout_toRightOf="@+id/new_message_model_ll"
        android:layout_centerVertical="true"
        android:layout_marginLeft="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="已添加"
        android:visibility="gone"
        />
</RelativeLayout>
    <View style="@style/PersonalLine" />
</RelativeLayout>