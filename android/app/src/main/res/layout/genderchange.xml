<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/my_background">
    <RelativeLayout
        android:id="@+id/genderChange_bar"
        style="@style/title">
        <ImageView
            style="@style/title_image"
            android:id="@+id/genderChange_back"
            android:src="@drawable/pre"
            />
        <TextView
            style="@style/title_text"
            android:text="性别"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/genderChange_bar">
    <RelativeLayout
        android:id="@+id/genderChange_girl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       >
        <TextView
            android:id="@+id/genderChange_girltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/genderChange_girlimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pre"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <View style="@style/PersonalLine" />
    <RelativeLayout
        android:id="@+id/genderChange_man"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/genderChange_mantext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/genderChange_manimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pre"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:visibility="gone"/>
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>