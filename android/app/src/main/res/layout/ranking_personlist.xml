<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/rank_background">
    <RelativeLayout
        android:id="@+id/ranking_personlist__r1"
        style="@style/title">
        <TextView
            style="@style/title_text"
            android:text="排行榜" />

    </RelativeLayout>
<LinearLayout
    android:layout_below="@+id/ranking_personlist__r1"
    android:id="@+id/ranking_personlist_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:id="@+id/ranking_personlist_imageView1"
        android:src="@drawable/touxiang"
        android:layout_margin="20dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:id="@+id/ranking_personlist_imageView2"
        android:src="@drawable/touxiang"
        android:layout_margin="20dp"
        android:layout_weight="1"
         />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/ranking_personlist_imageView3"
        android:src="@drawable/touxiang"
        android:layout_margin="20dp"
        android:layout_weight="1"
         />
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ranking_personlist_textview"
        android:layout_below="@+id/ranking_personlist_linearlayout"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
    <TextView
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:drawableLeft="@drawable/grade"
        android:text="排行榜TOP10"
        android:textSize="51px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="2.0dip"
        android:paddingLeft="70.0dip"
        android:paddingRight="70.0dip"
        android:paddingTop="2.0dip"
        android:background="#ffffff"
        />
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_personlist_textview"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
    <ListView
        android:id="@+id/ranking_personlist_listview"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_yuanjiao"
        >

    </ListView>
</FrameLayout>
</RelativeLayout>